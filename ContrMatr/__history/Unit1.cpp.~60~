// ---------------------------------------------------------------------------

#include <vcl.h>
#pragma hdrstop

#include "Unit1.h"
// ---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.dfm"
TForm1 *Form1;
String str;
// ---------------------------------------------------------------------------
__fastcall TForm1::TForm1(TComponent* Owner) : TForm(Owner)
{
}
// ---------------------------------------------------------------------------
void __fastcall TForm1::Button1Click(TObject *Sender)
{
	if (OpenDialog1->Execute() == True)
	{
		Image1->Picture->LoadFromFile(OpenDialog1->FileName);
		Image2->Picture->LoadFromFile(OpenDialog1->FileName);

		TColor Color;
		int R,G,B;
		str = "";

		Graphics::TBitmap *gBitmap = new Graphics::TBitmap();
		gBitmap->PixelFormat=pf24bit;
		gBitmap->Width = 12;
		gBitmap->Height = 12;

		for (int i = 0; i < 12; i++)
		{
			for (int j = 0; j < 12; j++)
			{
				Color = Image2->Picture->Bitmap->Canvas->Pixels[i][j];

				R = GetRValue(Color);
				G = GetGValue(Color);
				B = GetBValue(Color);

				gBitmap->Canvas->Pixels[i][j] = (TColor) RGB(R,G,B);

				str += IntToStr(R) + " " + IntToStr(G) + " " + IntToStr(B);

				Memo1->Lines->Add(
				IntToStr(R) + " " +
				IntToStr(G) + " " +
				IntToStr(B));


			}
		}

		gBitmap->SaveToFile(ExtractFileDir(Application->ExeName) + "/test.bmp");
		gBitmap->FreeImage();
		gBitmap->Dormant();
		Memo1->Lines->Add("Всего байт: " + IntToStr(Memo1->Lines->Count));
	}
}
// ---------------------------------------------------------------------------
void __fastcall TForm1::Button2Click(TObject *Sender)
{
	IdHTTP1->Get(Edit1->Text + "?str="+str);
}
